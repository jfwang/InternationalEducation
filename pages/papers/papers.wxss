/* pages/papers/papers.wxss */
.header {
  z-index: 1;
  background-color: ghostwhite;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
}

.condition-list {
  z-index: 1;
  background-color: ghostwhite;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
}

.project-icon {
  width: 3.2rem;
  height: 3rem;
  padding-left: 20rpx;
  padding-right: 50rpx;
}

.scroll-icon {
  width: 1rem;
  height: 1rem;
  text-align: right;
}

.paper-list {
  background-color: red;
  width: 100%;
  position: absolute;
  top: 100rpx;
}

.paper {
  width: 100%;
  background-color: white;
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.paper-icon {
  width: 3rem;
  height: 2rem;
  padding-left: 100rpx;
  padding-right: 100rpx;
}

.paper-name {
  font-size: 50rpx;
  font-weight: bold;
  color: red;
  text-overflow: ellipsis;
  white-space:nowrap;
  display: block;
  width: 50%; 
  padding-left: 40rpx;
  margin-bottom: 20rpx;
}