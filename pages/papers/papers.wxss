/* pages/papers/papers.wxss */
.header {
  z-index: 1;
  background-color: ghostwhite;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  display: flex;
}

.project-icon-view {
  width: 30%;
}

.project-icon {
  width: 100%;
  height: 100%;
}

picker-view {
  width: 70%;
  height: 100%;
}

.picker-view-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroll-icon {
  width: 0.8rem;
  height: 0.8rem;
}

.project-name {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 40rpx;
  text-align: center;
  text-shadow: 10rpx 10rpx 10rpx #ccc;
}

.paper-list {
  width: 100%;
  position: absolute;
  top: 100rpx;
  background: linear-gradient(to right, ghostwhite, #cdcdcd);
}

.paper {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: white;
  display: flex;
  padding: 10rpx;
  align-items: center;
}

.paper-name {
  font-size: 66rpx;
  font-weight: bold;
  color: red;
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 10rpx 10rpx 10rpx #ccc;
  white-space: nowrap;
  display: block;
  width: 50%;
  padding-left: 20rpx;
}

.icon-view {
  width: 50%;
  display: flex;
}

.like {
  width: 1.5rem;
  height: 1.25rem;
}

.icon {
  width: 2rem;
  height: 1.8rem;
}