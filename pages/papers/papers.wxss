/* pages/papers/papers.wxss */
.header {
  z-index: 1;
  background-color: ghostwhite;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
}

.project-icon-view {
  display: inline-block;
  width: 30%;
}

.project-icon {
  width: 2.4rem;
  height: 2.4rem;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

picker-view {
  display: inline-block;
  width: 70%;
}

.picker-view-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroll-icon {
  width: 0.8rem;
  height: 0.8rem;
}

.paper-list {
  background-color: ghostwhite;
  width: 100%;
  position: absolute;
  top: 50px;
}

.paper {
  margin: 20rpx;
  margin-top: 0;
  background-color: white;
  display: flex;
  padding: 10rpx;
  align-items: center;
}

.paper-name {
  font-size: 66rpx;
  font-weight: bold;
  color: red;
  text-overflow: ellipsis;
  text-shadow: 10rpx 10rpx 10rpx #ccc;
  white-space: nowrap;
  display: block;
  width: 40%;
  padding-left: 30rpx;
}

.icon-view {
  width: 30%;
}

.qp-icon {
  width: 2rem;
  height: 2rem;
}

.ms-icon {
  width: 2rem;
  height: 2rem;
  padding-left: 50rpx;
}