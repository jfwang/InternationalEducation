<!--pages/papers/papers.wxml-->
<view class="header">
  <view class="project-icon-view">
    <image mode="aspectFit" class="project-icon" src="{{ currentProject.name?projectIconPath+currentProject.name+'.png':'' }}"></image>
  </view>
  <view class="project-name">
    <label>{{ currentProject.name }}</label>
  </view>
</view>

<scroll-view class="paper-list">
  <block wx:for="{{ papers }}" wx:key="id" wx:for-item="paper">
    <view class="paper">
      <view class="paper-name">{{ paper.name }}</view>
      <view class="icon-view">
        <image class="qp-icon" bindtap="onOpenQP" data-paper-id="{{ paper.id }}" src="{{ paper.opened?otherIconPath+'qp-opened.png':otherIconPath+'qp.png'}}"></image>
        <image class="ms-icon" bindtap="onOpenMS" data-paper-id="{{ paper.id }}" src="{{ paper.checked?otherIconPath+'ms-checked.png':otherIconPath+'ms.png' }}"></image>
      </view>
    </view>
  </block>
</scroll-view>
