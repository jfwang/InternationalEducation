/* pages/mine/mine.wxss */
.user-container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: ghostwhite;
  box-sizing: border-box;
}

.userinfo {
  width: 100%;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100rpx;
}

button {
  width: 256rpx;
  background-color: white;
  margin-top: 20rpx;
}

.item {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  background-color: white;
  display: flex;
  line-height: 100rpx;
  align-items: center;
}

.icon {
  display: inline-block;
  width: 2rem;
  height: 2rem;
  padding-left: 40rpx;
}

.text {
  width: 60%;
  padding-left: 40rpx;
  display: inline-block;
}

.arrow {
  display: inline-block;
  width: 1rem;
  height: 1rem;
  padding-left: 60rpx;
}